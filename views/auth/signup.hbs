<div class="row d-flex">
  <div class="col-sm-4">

  </div>
  <div class="col-sm-4">
    <h2 class="">Registrate</h2>
    <div class="card">
      <div class="card-body text-center">
        <form action="/auth/signup" method="POST" id="form-container">
          <label for="username">Username</label>
          <input id="username" type="text" name="username" placeholder="JonSnow">
          <br><br>
          <label for="password">Password</label>
          <input id="password" type="password" name="password" placeholder="Your password">
          <br>
          {{#if message }}
          <div class="error-message">{{ message }}</div>
          {{/if}}
          <br>
          <label for="refugio">Refugio</label>
          <input id="refugio" type="text" name="refugio" placeholder="Lugar">
          <br><br>
          {{!-- //ZONA CHARCUTERA --}}
          
          <input id="address" type="textbox" name="address" value="43, Doctor Esquerdo, Madrid">
          <br>
  
          <div id="map"></div>
          
          {{!-- <script src="javascripts/signup.js"></script> --}}
          {{!-- <script async defer
          src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBrPNbJOlFtyYOkm722n_jbRGtSxOsE_q8&callback=initMap">
          </script> --}}
          
          {{!-- //ZONA CHARCUTERA --}}
          
          <br>

          <br><br>

          <button class="btn btn-primary">Create account</button>

          <p class="account-message">
            Do you already have an account?
            <a href="/auth/login">Login</a>
          </p>
        </form>

      </div>
    </div>
  </div>
</div>